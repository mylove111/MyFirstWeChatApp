.container {
  padding: 30rpx;
  box-sizing: border-box;
  background: #f6f6f6;
  min-height: 100vh;
}

.stats {
  display: flex;
  justify-content: space-around;
  padding: 30rpx;
  background: #fff;
  border-radius: 20rpx;
  margin-bottom: 30rpx;
}

.stat-item {
  text-align: center;
}

.stat-number {
  font-size: 48rpx;
  font-weight: bold;
  color: #3498db;
  display: block;
}

.stat-label {
  font-size: 24rpx;
  color: #666;
}

.word-list {
  background: #fff;
  border-radius: 20rpx;
  padding: 20rpx;
}

.word-item {
  padding: 20rpx;
  border-bottom: 1rpx solid #eee;
}

.word-info {
  display: flex;
  align-items: center;
  margin-bottom: 10rpx;
}

.word {
  font-size: 32rpx;
  font-weight: bold;
  margin-right: 20rpx;
}

.phonetic {
  font-size: 28rpx;
  color: #666;
}

.meaning {
  font-size: 28rpx;
  color: #333;
}

@font-face {
  font-family: "iconfont";
  src: url('data:font/woff2;charset=utf-8;base64,...'); /* 这里需要完整的字体文件base64编码 */
}

.iconfont {
  font-family: "iconfont" !important;
  font-size: 40px;
  font-style: normal;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
}

.icon-study:before {
  content: "\e624";
  color: #3498db;
}

.icon-book:before {
  content: "\e67f";
  color: #2ecc71;
}

.icon-wrong:before {
  content: "\e668";
  color: #e74c3c;
}

.icon-user:before {
  content: "\e7ae";
  color: #9b59b6;
} 
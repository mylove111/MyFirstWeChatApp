/* pages/profile/profile.wxss */
.container {
  padding: 30rpx;
  background: #f6f6f6;
  min-height: 100vh;
}

.user-info {
  background: #fff;
  padding: 40rpx;
  border-radius: 20rpx;
  text-align: center;
  margin-bottom: 30rpx;
}

.login-btn {
  background: #3498db;
  color: #fff;
  border-radius: 40rpx;
  padding: 20rpx 60rpx;
  border: none;
  font-size: 32rpx;
}

.avatar {
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
  margin-bottom: 20rpx;
}

.nickname {
  font-size: 32rpx;
  color: #333;
}

.stats-container {
  display: flex;
  justify-content: space-around;
  background: #fff;
  padding: 30rpx;
  border-radius: 20rpx;
  margin-bottom: 30rpx;
}

.stat-item {
  text-align: center;
}

.stat-number {
  font-size: 48rpx;
  font-weight: bold;
  color: #3498db;
  display: block;
}

.stat-label {
  font-size: 24rpx;
  color: #666;
}

.menu-list {
  background: #fff;
  border-radius: 20rpx;
}

.menu-item {
  display: flex;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #eee;
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-item .iconfont {
  margin-right: 20rpx;
  font-size: 40rpx;
}

.menu-item text {
  font-size: 28rpx;
  color: #333;
}

.arrow {
  margin-left: auto;
  color: #999;
}

.logout-btn {
  margin-top: 20rpx;
  background: #e74c3c;
  color: #fff;
  font-size: 28rpx;
  padding: 10rpx 30rpx;
  border-radius: 30rpx;
  border: none;
}

.version-info {
  text-align: center;
  color: #999;
  font-size: 24rpx;
  margin-top: 40rpx;
}

.menu-item {
  cursor: pointer;
  transition: background-color 0.3s;
}

.menu-item:active {
  background-color: #f5f5f5;
}

.menu-item .arrow {
  color: #999;
  font-size: 32rpx;
}
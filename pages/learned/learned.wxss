/* pages/learned/learned.wxss */
.container {
  padding: 30rpx;
  background: #f5f6fa;
  min-height: 100vh;
}

.header {
  background: #fff;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.1);
}

.stats {
  display: flex;
  justify-content: space-around;
}

.stat-item {
  text-align: center;
}

.stat-number {
  font-size: 36rpx;
  font-weight: bold;
  color: #3498db;
  display: block;
}

.stat-label {
  font-size: 24rpx;
  color: #666;
  margin-top: 10rpx;
}

.word-list {
  background: #fff;
  border-radius: 20rpx;
  padding: 20rpx;
}

.word-item {
  padding: 20rpx;
  border-bottom: 1rpx solid #eee;
}

.word-item:last-child {
  border-bottom: none;
}

.word-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 10rpx;
}

.word-main {
  display: flex;
  align-items: center;
}

.word {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-right: 20rpx;
}

.phonetic {
  font-size: 28rpx;
  color: #666;
  margin-right: 20rpx;
}

.meaning {
  font-size: 28rpx;
  color: #666;
  display: block;
  margin: 10rpx 0;
}

.example {
  font-size: 26rpx;
  color: #999;
  display: block;
  font-style: italic;
  margin-top: 10rpx;
}

.source-tag {
  font-size: 24rpx;
  padding: 4rpx 12rpx;
  border-radius: 20rpx;
}

.audio-icon {
  width: 32rpx;
  height: 32rpx;
}

.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.empty-image {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 30rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
}

.example-container {
  display: flex;
  align-items: center;
  margin-top: 10rpx;
  padding: 10rpx;
  background: #f8f9fa;
  border-radius: 10rpx;
}

.example {
  flex: 1;
  font-size: 26rpx;
  color: #666;
  font-style: italic;
}

.audio-icon.small {
  width: 24rpx;
  height: 24rpx;
  margin-left: 10rpx;
}

/* 添加点击效果 */
.example-container:active {
  opacity: 0.7;
}